NAME	= megaphone

# **************************************************************************** #
CC		= g++-11
CFLAG	= -Wall -Wextra -Werror -std=c++98 -pedantic 

SRC		= $(wildcard *.cpp)
OBJ		= $(SRC:.cpp=.o)

RM		= rm -f

# **************************************************************************** #
all: $(NAME)

# **************************************************************************** #
%.o:%.cpp
	$(CC) $(CFLAG) -c $? -o $@ 

# **************************************************************************** #
$(NAME): $(OBJ)
	$(CC) $(CFLAG) $^ -o $(NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

r:
	./$(NAME)

# **************************************************************************** #